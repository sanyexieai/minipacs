<Window x:Class="minipacs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minipacs"
        mc:Ignorable="d"
        Title="Mini PACS" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 服务器配置 -->
        <GroupBox Header="服务器配置" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="监听端口：" VerticalAlignment="Center"/>
                <TextBox x:Name="ServerPort" Width="100" Text="11112" Margin="5,0,10,0"/>
                <Button Content="启动服务器" Click="StartServer_Click" Margin="0,0,10,0"/>
                <Button Content="停止服务器" Click="StopServer_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 远程服务器配置 -->
        <GroupBox Grid.Row="1" Header="远程服务器配置" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="主机：" VerticalAlignment="Center"/>
                <TextBox x:Name="RemoteHost" Width="150" Text="localhost" Margin="5,0,10,0"/>
                <TextBlock Text="端口：" VerticalAlignment="Center"/>
                <TextBox x:Name="RemotePort" Width="100" Text="11122" Margin="5,0,10,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="导入DICOM" Click="ImportDicom_Click" Margin="0,0,10,0"/>
            <Button Content="刷新列表" Click="RefreshList_Click"/>
        </StackPanel>

        <!-- 文件列表 -->
        <ListView Grid.Row="3" ItemsSource="{Binding DicomFiles}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="患者姓名" DisplayMemberBinding="{Binding PatientName}" Width="150"/>
                    <GridViewColumn Header="患者ID" DisplayMemberBinding="{Binding PatientID}" Width="100"/>
                    <GridViewColumn Header="检查日期" DisplayMemberBinding="{Binding StudyDate}" Width="100"/>
                    <GridViewColumn Header="模态" DisplayMemberBinding="{Binding Modality}" Width="80"/>
                    <GridViewColumn Header="文件路径" DisplayMemberBinding="{Binding FilePath}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
