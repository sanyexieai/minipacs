<Window x:Class="minipacs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minipacs"
        mc:Ignorable="d"
        Title="Mini PACS" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="导入DICOM" Click="ImportDicom_Click" Margin="0,0,10,0"/>
            <Button Content="刷新列表" Click="RefreshList_Click"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding DicomFiles}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="患者姓名" DisplayMemberBinding="{Binding PatientName}" Width="150"/>
                    <GridViewColumn Header="患者ID" DisplayMemberBinding="{Binding PatientID}" Width="100"/>
                    <GridViewColumn Header="检查日期" DisplayMemberBinding="{Binding StudyDate}" Width="100"/>
                    <GridViewColumn Header="模态" DisplayMemberBinding="{Binding Modality}" Width="80"/>
                    <GridViewColumn Header="文件路径" DisplayMemberBinding="{Binding FilePath}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
